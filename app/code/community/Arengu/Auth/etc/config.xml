<config>
    <modules>
        <Arengu_Auth>
            <version>{{ VERSION }}</version>
        </Arengu_Auth>
    </modules>

    <frontend>
        <routers>
            <arengu_auth>
                <use>standard</use>
                <args>
                    <module>Arengu_Auth</module>
                    <frontName>arengu_auth</frontName>
                </args>
            </arengu_auth>
        </routers>
    </frontend>

    <global>
        <resources>
            <arengu_auth>
                <setup>
                    <module>Arengu_Auth</module>
                </setup>
            </arengu_auth>
        </resources>

        <helpers>
            <arengu_auth>
                <class>Arengu_Auth_Helper</class>
            </arengu_auth>
        </helpers>

        <models>
            <arengu_auth>
                <class>Arengu_Auth_Model</class>
            </arengu_auth>
        </models>

        <blocks>
            <arengu_auth>
                <class>Arengu_Auth_Block</class>
            </arengu_auth>
        </blocks>
    </global>
</config>
